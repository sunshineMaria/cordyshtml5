<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        version   = "2.0.0">
	<name>Cordys</name>

	<description>Cordys</description>
	
	<icon src="../../platforms/ios/res/icon/ios_144.png"    width="144" height="144" gap:platform="ios" />

	<gap:splash src="../../platforms/ios/res/screen/ipad_landscape.png"              width="1024" height="748"  gap:platform="ios" />
	<gap:splash src="../../platforms/ios/res/screen/ipad_portrait.png"               width="768"  height="1004" gap:platform="ios" />
	<gap:splash src="../../platforms/ios/res/screen/ipad_retina_landscape.png"       width="2048" height="1496" gap:platform="ios" />
